{
    "file-path-def": {"WORK": "../a-setup"},
    "host": "0.0.0.0",
    "port": 8090,
    "html-base": "/anfisa/",
    "html-title": "Anfisa",
    "mongo-db": "Anfisa",
    "workspaces": [
        {
            "name": "Personal_Genome_3140",
            "mongo-name": "bgm9001_wgs",
            "file": "${WORK}/data/bgm9001_wgs.json"
        }
    ],
    "files": {
        "files": [".css", ".js", ".png", ".gif"],
        "${WORK}/export":  [".xlsx"]}, 
    "export": {
        "excel-template": "${WORK}/export/SEQaBOO_output_template_0730.xlsx",
        "work-dir": "${WORK}/export/work"
    },
    "link-base": ["anfisa.forome.org", "Local"],
    "logging": { 
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": { 
                "standard": { 
                "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
            }
        },
        "handlers": { 
            "default": { 
                "level": "INFO",
                "formatter": "standard",
                "class": "logging.FileHandler",
                "filename": "${WORK}/logs/anfisa.log"
            }
        },
        "loggers": { 
            "": { 
                "handlers": ["default"],
                "level": "INFO",
                "propagate": true
            }
        } 
    }      
}